<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>app.sagascribe.Sagascribe</id>
  <name>Saga Scribe</name>
  <summary>TEI-XML manuscript transcription editor with custom DSL shorthand</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <description>
    <p>
      Saga Scribe is a desktop application for manuscript transcription that uses a custom
      domain-specific language (DSL) to generate TEI-XML output with MENOTA support.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Custom DSL for efficient transcription with syntax highlighting</li>
      <li>Real-time preview with XSLT rendering</li>
      <li>TEI-XML export with MENOTA compatibility</li>
      <li>XML validation against TEI P5, MENOTA, and MENOTA P5 schemas</li>
      <li>ONP (Dictionary of Old Norse Prose) integration for lemmatization</li>
      <li>MUFI character support with Junicode font</li>
      <li>Import existing TEI-XML documents</li>
      <li>Export to HTML and PDF formats</li>
      <li>Word and character-level annotations</li>
    </ul>
  </description>

  <launchable type="desktop-id">app.sagascribe.Sagascribe.desktop</launchable>

  <url type="homepage">https://github.com/motheatensoul/saga-scribe</url>
  <url type="bugtracker">https://github.com/motheatensoul/saga-scribe/issues</url>

  <developer id="app.sagascribe">
    <name>Saga Scribe Contributors</name>
  </developer>

