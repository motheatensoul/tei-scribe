{
	"name": "saga-scribe",
	"private": true,
	"version": "0.3.0",
	"type": "module",
	"scripts": {
		"build:grammar": "lezer-generator src/lib/parser/tei-dsl.grammar -o src/lib/parser/tei-dsl-parser.js",
		"dev": "bun run build:grammar && vite dev",
		"build": "bun run build:grammar && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:rust": "cd src-tauri && cargo clippy -- -D warnings",
		"check:all": "bun run check && bun run check:rust",
		"test:rust": "cd src-tauri && cargo test",
		"clean": "rm -rf node_modules/.vite .svelte-kit",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"flatpak:build": "bash flatpak/build-flatpak.sh",
		"flatpak:bundle": "flatpak build-bundle flatpak-repo saga-scribe.flatpak app.sagascribe.Sagascribe"
	},
	"devDependencies": {
		"@lezer/generator": "^1.8.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@tauri-apps/cli": "^2.9.6",
		"autoprefixer": "^10.4.23",
		"postcss": "^8.5.6",
		"svelte": "^5.46.3",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@codemirror/basic-setup": "^0.20.0",
		"@codemirror/commands": "^6.10.1",
		"@codemirror/lang-xml": "^6.1.0",
		"@codemirror/language": "^6.12.1",
		"@codemirror/lint": "^6.9.2",
		"@codemirror/search": "^6.6.0",
		"@codemirror/state": "^6.5.4",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.39.11",
		"@lezer/highlight": "^1.2.3",
		"@lezer/lr": "^1.4.7",
		"@lucide/svelte": "^0.562.0",
		"@tauri-apps/api": "^2.9.1",
		"@tauri-apps/plugin-dialog": "^2.6.0",
		"@tauri-apps/plugin-fs": "^2.4.5",
		"daisyui": "^5.5.14",
		"lucide": "^0.562.0",
		"svelte-splitpanes": "^8.0.12"
	},
	"overrides": {
		"@codemirror/view": "^6.39.11",
		"@codemirror/state": "^6.5.4"
	}
}
