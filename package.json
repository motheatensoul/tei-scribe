{
	"name": "saga-scribe",
	"private": true,
	"version": "0.2.0",
	"type": "module",
	"scripts": {
		"build:grammar": "lezer-generator src/lib/parser/tei-dsl.grammar -o src/lib/parser/tei-dsl-parser.js",
		"dev": "bun run build:grammar && vite dev",
		"build": "bun run build:grammar && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "rm -rf node_modules/.vite .svelte-kit",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build"
	},
	"devDependencies": {
		"@lezer/generator": "^1.8.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@tauri-apps/cli": "^2.9.6",
		"autoprefixer": "^10.4.23",
		"postcss": "^8.5.6",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@codemirror/commands": "^6.10.1",
		"@codemirror/language": "^6.12.1",
		"@codemirror/state": "^6.5.3",
