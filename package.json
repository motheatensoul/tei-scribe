		"@lezer/highlight": "^1.2.3",
		"@lezer/lr": "^1.4.6",
		"@lucide/svelte": "^0.562.0",
		"@tauri-apps/api": "^2.9.1",
		"@tauri-apps/plugin-dialog": "^2.4.2",
		"@tauri-apps/plugin-fs": "^2.4.4",
		"codemirror": "^6.0.2",
		"daisyui": "^5.5.14",
		"lucide": "^0.562.0",
		"svelte-splitpanes": "^8.0.12"
	}
}
