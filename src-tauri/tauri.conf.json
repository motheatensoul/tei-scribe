{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Saga Scribe",
  "version": "0.2.0",
  "identifier": "app.sagascribe.Sagascribe",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Saga Scribe",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../static/entities/": "entities/",
      "../static/normalizer/": "normalizer/",
      "../static/dictionary/": "dictionary/",
      "../static/schemas/": "schemas/"
    }
  }
}
